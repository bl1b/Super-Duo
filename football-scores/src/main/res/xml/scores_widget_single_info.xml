<!--
    NOTE: not all attributes are available on min api 10:
        KeyGuard-related topics are available on api 17
        resizing is available since api 12
        previewImage is available since api 11
    no additional xmls required since invalid attributes are simply ignored on their respective
    api-levels
    the update-interval is set to 3h (60*60*3*1000)
    set widget should have at least 2x1
    TODO: for future versions: use a SyncAdapter to retrieve data and set update-interval to 0
-->
<appwidget-provider
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:initialKeyguardLayout="@layout/scores_widget_single"
    android:initialLayout="@layout/scores_widget_single"
    android:minHeight="@dimen/scores_widget_single_height_min"
    android:minWidth="@dimen/scores_widget_single_width_min"
    android:previewImage="@drawable/ic_launcher"
    android:resizeMode="horizontal|vertical"
    android:updatePeriodMillis="10800000"
    android:widgetCategory="home_screen|keyguard"
    tools:ignore="UnusedAttribute">
</appwidget-provider>